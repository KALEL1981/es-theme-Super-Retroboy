<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <type>horizontal</type>
        <pos>0.0 0.0</pos>
        <logoAlignment>middle</logoAlignment>         
        <size>1 1</size>
        <logoScale>2.0</logoScale>
        <zIndex>3</zIndex>          
        <logoSize>0.2 0.1</logoSize>
        <color>00000000</color>
        <maxLogoCount>3</maxLogoCount>       
      </carousel>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>2</zIndex>                 
         <path>./_inc/images/background.png</path>
      </image>                      
      <text name="systemInfo">     
         <pos>0.0 0.6</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>ffffff</color>
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
	     <fontSize>0.04</fontSize>
         <zIndex>5</zIndex>	     
      </text>            
   </view>
</feature>

   <view name="system">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         <fontSize>0.025</fontSize>     
         <pos>0.04 0.95</pos>      
         <textColor>ffffff</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem>
   </view>  

   <view name="detailed,video,basic">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         <fontSize>0.025</fontSize>     
         <pos>0.009 0.95</pos>      
         <textColor>ffffff</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem>
   </view>  

   <view name="basic,detailed,video">
      <textlist name="gamelist">      
         <selectorColor>3eb4ff</selectorColor>
         <selectedColor>ffffff</selectedColor>
         <primaryColor>ffffff</primaryColor>
         <secondaryColor>3eb4ff</secondaryColor>
         <fontPath>./_inc/fonts/Cabin-Bold.ttf</fontPath>
         <fontSize>0.042</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound>./_inc/sounds/Move.wav</scrollSound>
         <zIndex>3</zIndex>                          
      </textlist>
   </view> 
   
   <view name="detailed,video">
      <textlist name="gamelist">                          
         <pos>0.025 0.025</pos>
         <size>0.45 0.9</size>
         <alignment>left</alignment>                       
      </textlist>
   </view>
   
   <view name="basic">
      <textlist name="gamelist">                          
         <pos>0.03 0.19</pos>
         <size>.937 0.69</size>
         <alignment>center</alignment>                       
      </textlist>
   </view>
   
   <view name="basic">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/background_basic.png</path>
         <zIndex>2</zIndex>          
      </image>
      <image name="background2" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/background_black.png</path>
         <zIndex>1</zIndex>          
      </image>                
   </view> 
    
   <view name="detailed,video">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/background_video.png</path>
         <zIndex>2</zIndex>         
      </image>
      <image name="background2" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/background_black.png</path>
         <zIndex>1</zIndex>          
      </image>               
   </view>     
   
   <view name="detailed">
      <image name="md_image">
         <origin>0.5 0.5</origin>
         <pos>0.75 0.66</pos>
         <maxSize>0.45 0.45</maxSize>
         <zIndex>2</zIndex>         
      </image>      
   </view>

   <view name="video">   
      <video name="md_video">
         <origin>0.5 0.5</origin>
         <pos>0.75 0.66</pos>
         <maxSize>0.45 0.45</maxSize>
         <delay>3</delay>
         <zIndex>2</zIndex>         
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <showSnapshotDelay>true</showSnapshotDelay>
      </video>             
   </view>
   
   <view name="detailed,video">
      <rating name="md_rating">
         <origin>0.5 0.5</origin>
         <zIndex>5</zIndex>       
         <pos>0.825 0.345</pos>
         <size>0.04 0.04</size>
         <zIndex>2</zIndex>
         <filledPath>./_inc/images/star_full.png</filledPath>
         <unfilledPath>./_inc/images/star_hollow.png</unfilledPath>
      </rating>
      <text name="md_lbl_developer">
         <origin>0.5 0.5</origin>
         <pos>0.825 0.31</pos>
         <size>0.6 0.6</size>
         <color>ffffff</color>
         <zIndex>2</zIndex> 
      </text>
      <text name="md_developer">
         <origin>0.5 0.5</origin>
         <pos>0.925 0.31</pos>
         <size>0.6 0.6</size>
         <color>ffffff</color>
         <zIndex>2</zIndex>
      </text>
      <text name="md_lbl_releasedate">
         <origin>0.5 0.5</origin>
         <pos>0.825 0.35</pos>
         <size>0.6 0.6</size>
         <color>ffffff</color>
         <zIndex>2</zIndex>                  
      </text>
      <datetime name="md_releasedate">
         <origin>0.5 0.5</origin>
         <pos>0.925 0.35</pos>
         <size>0.6 0.6</size>
         <color>ffffff</color>
         <zIndex>2</zIndex>         
      </datetime>
   </view>
   
</theme>
